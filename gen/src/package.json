{
  "name": "gen",
  "version": "0.0.0",
  "main": "../bin/gen.js",
  "license": "MIT",
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/yargs": "^17.0.24"
  },
  "scripts": {
    "build": "tsc && yarn postbuild",
    "postbuild": "cp package.json ../bin/ && cp yarn.lock ../bin/ && yarn --cwd ../bin/ install --production",
